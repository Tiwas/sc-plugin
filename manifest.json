{
    "manifest_version": 3,
    "name": "SickChill Plugin",
    "version": "1.0",
    "description": "A plugin to interact with SickChill.",
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "optional_host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_icon": {
            "48": "images/SC-disabled.png",
            "128": "images/SC-disabled.png"
        },
        "default_title": "SickChill Plugin"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "icons": {
        "48": "images/SC.png",
        "128": "images/SC.png"
    },
    "web_accessible_resources": [
        {
            "resources": [ "images/SC.png" ],
            "matches": [ "<all_urls>" ]
        }
    ]
}

